{
  "extends": "../../config-typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./package",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["package/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 